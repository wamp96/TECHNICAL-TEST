<div class="col-md-4">
    <div class="card">
        <div class="card-header">
            <h3>EDIT TASK</h3>
        </div>
        <div class="card-body">
            <form action="/tasks/edit/{{task._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">            
                <div class="form-group">
                    <input type="text" class="form-control" name="title" placeholder="Title" value="{{task.title}}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control">{{task.description}}</textarea>
                </div> 
                <div class="form-group">
                    <input type="date" class="form-control" name="dateExpiration" placeholder="dateExpiration" value="{{task.dateExpiration}}">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="statusTask" placeholder="statusTask" value="{{task.statusTask}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        SAVE
                    </button>
                </div>
            </form>
        </div>        
    </div>
</div>